<div class="jumbotron">
    <h1>REST API </h1>
    <p class="lead">This web application is calling RESTAPI</p>

</div>
@section Scripts {
    <script type="text/javascript">


            var url = '@Url.Action("GetRandom", "DisplayClues")';
                $('#randomclue').click(function() {
            var keyWord = $('#Keyword').val();
             $('#searchResults').load(url, { searchText: keyWord });
                })

       
      
        
        $('#category').click(function() {
            
            var txtVal = $("#categoryvalue").val();
              var url2 = '@Url.Action("Category", "DisplayClues" )' + "?id=" + txtVal;
           // alert(txtVal);
            //alert(url2);
            var keyWord = $('#Keyword').val();
             $('#searchResults').load(url2, { searchText: keyWord });
        })

          
        $('#period').click(function () {
            var todate = $("#todate").val();
            var fromdate = $("#fromdate").val();
            

            var url3 = '@Url.Action("Period", "DisplayClues")' + "?fromDate=" + todate + "&toDate" + todate;
            
            var keyWord = $('#Keyword').val();
             $('#searchResults').load(url3, { searchText: keyWord });
                })

    </script>
}
